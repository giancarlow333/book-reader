<body class= "h-screen w-screen flex flex-col justify-center items-center">

    <section class = "flex flex-row justify-center items-center w-screen h-screen">

        <div class = "flex flex-row justify-center items-center w-1/4 h-full bg-repeat "  style= "background-image: url(/public/img/Backgrounds/bookpages.jpeg)">

            <div class = "flex justify-top items-center flex-col h-full w-full font-serif backdrop-brightness-90 shadow-black shadow-2xl">
                <h1 class = "my-7 text-orange-900 text-5xl text-center antialiased underline decoration-double underline-offset-8 bg-white pb-5 px-3 rounded-2xl bg-opacity-80">Ravishing Reads</h1>
         
                 <!-- Avatar -->
                <div class= "rounded-full mb-8 border-8 border-amber-600 border-solid shadow-black shadow-xl">
                    <img id="display_image" class="h-32 w-32 rounded-full bg-black " src="/public/img/avators/bookworm1.jpeg">
                  </div>
                
                  <!-- Modal -->
                  <button id="openModal" class = " bg-blue-800 rounded-md h-8 w-28 text-white shadow-black shadow-md" >My Avatar</button>
                
                  <!-- Avatar Modal -->
                  <div id="avatarModal" class="modal ">
                    <div class="modal-content">
                      <span class="close">&times;</span>
                       <div id="avatar-gallery">
                        <img class="avatar-option" src="./img/avators/cat.jpeg" alt="Avatar 1">
                        <img class="avatar-option" src="./img/avators/fox.jpeg" alt="Avatar 2">
                        <img class="avatar-option" src="./img/avators/owl.png" alt="Avatar 3">
                        <img class="avatar-option" src="./img/avators/panda.jpeg" alt="Avatar 4">
                        <img class="avatar-option" src="./img/avators/pig.png" alt="Avatar 5">
                        <img class="avatar-option" src="./img/avators/owl.png" alt="Avatar 6">
                      </div>
                    </div>
                  </div>

                <div class = "w-full flex flex-col justify-top items-center">
                    <p class = "my-6 text-orange-900 text-3xl text-center text-left antialiased w-3/4 bg-white bg-opacity-80 border-t-2 border-orange-900 ">My Shleves</p>
                    <button class = "text-sky-100 text-center text-3xl font-serif antialiased bg-orange-900 rounded-md w-9/12 h-14 mb-2.5 shadow-inner shadow-white opacity-90">Read</button>
                    <button class = "text-sky-100 text-center text-3xl font-serif antialiased bg-orange-900 rounded-md w-9/12 h-14 mb-2.5 shadow-inner shadow-white opacity-90">Read Me</button>
                    <button class = "text-sky-100 text-center text-3xl font-serif antialiased bg-orange-900 rounded-md w-9/12 h-14 mb-2.5 shadow-inner shadow-white opacity-90">My Collection</button>
                    <button class = "text-sky-100 text-center text-3xl font-serif antialiased bg-orange-950 rounded-md w-9/12 h-14 mb-2.5 shadow-inner shadow-white opacity-90">New Bookshelf </button>
                </div>
            </div>
            
        </div>


        <div class = "flex flex-col justify-top items-center h-full w-3/4 bg-repeat" style= "background-image: url(./img/Backgrounds/bakcground6.png)">
 <!--SearchBar-->       
            <div class = "flex justify-center items-center flex-col w-5/6 h-1/4 " >

                <form class = "w-10/12  h-14 flex flex-row justify-top items-center text-orange-900 border-b-4 border-orange-900 rounded-full bg-white  bg-opacity-80 font-serif " autocomplete="off" >
                <input class = "w-full  h-full  pl-6 bg-transparent
                 placeholder:text-orange-900 placeholder:italic text-3xl rounded-full" type = "text" name = "search" placeholder = "Find Me A Book..."/>
                 <button type = "submit" class = " self-end flex-none h-full rounded-full mr-3" ><img class = "w-10 rounded-full "src = "./img/Backgrounds/search-Icon3.png"></button>
                </form>
                <h2 class = "text-3xl mt-6 text-orange-400 sub-pixel-antialiased rounded-2xl bg-black bg-opacity-60 brightness-125 mb-6 font-serif ">‚ÄúA reader lives a thousand lives before he dies‚Äù</h2>
            </div>
<!--Book Details-->
<div class = "flex flex-col justify-top items-center  flex-col w-full h-full overflow-auto">
{{#each list.books as |book|}}
    <div class = "flex flex-row bg-white  bg-opacity-80 w-10/12 h-64 shadow-md shadow-slate-900 rounded-md shrink mb-2">
        <div class = "flex flex-col justify-center items-center w-2/12 py-2">
            <img class = "w-8/12  rounded-sm "src = {{this.bookImg}}>
            <button id="addToListBtn" class="text-sky-100 text-center bg-orange-950 w-28 h-5 m-1 shadow-inner shadow-white">Add to List</button>
            <!-- Dropdown using <select> -->
            <select id="listSelect" class="hidden">
            <option value="readingList">Reading List</option>
            <option value="wishlist">Wishlist</option>
            <option value="favorites">Favorites</option>
            </select>
        </div>
        <div class = "flex flex-col w-10/12 mr-8">
            <p class = "text-orange-950 text-left text-2xl justify-self-center font-bold 
            antialiased mt-2 " >{{this.title}}<span class = " text-blue-600 text-sm">{{this.pubDate}}</span></p>

            <p class = "text-orange-950 text-left text-lg justify-self-center font-bold 
            antialiased my-2" >{{this.authorName}}</p>
            <p class = "text-orange-950 text-left text-lg justify-self-center font-serif
            antialiased"  >{{this.ISBN}}</p> 
            <p class = "text-orange-950 text-left text-lg justify-self-center  font-bold 
            antialiased " >{{this.pageCount}}</p>
            <p class = "text-orange-950 text-left text-lg justify-self-center font-bold 
            antialiased"  >{{this.description}}</p>  
        </div>
        
    </div>
{{/each}} 
</div>

    </section>
